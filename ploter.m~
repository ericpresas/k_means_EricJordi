function [ ] = ploter( a, n, points , method)

%Method: 1---> for cells with features
%        1---> for cells with features

if (method==1)
    for i=1:n
            scatter3( a{i}(:,1),a{i}(:,2),a{i}(:,3),points)
            hold on
    end
elseif (method==0) 
    for i=1:n
            scatter3( a(i,1),a(i,2),a(i,3),points)
            hold on
    end
elseif (method==2) 
    for i=1:n
            scatter3( a(:,1),a(:,2),a(:,3),points)
            hold on
    end
end
    
end

